<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText

        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number one"
        android:inputType="number"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText

        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number two"
        android:inputType="number"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text=" 0.0 "
        android:textSize="40dp"
        android:background="#18FFFF"
        android:textColor="#191311"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/two"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/add"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="Add"
        android:backgroundTint="#69F0AE"
        android:textColor="#FF6E40"
        android:textSize="30sp"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/result"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/sub"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="Sub"
        android:backgroundTint="#FF4081"
        android:textColor="#18FFFF"
        android:textSize="30sp"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/result"
        app:layout_constraintLeft_toRightOf="@id/add"/>

    <Button
        android:id="@+id/mul"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="Mul"
        android:backgroundTint="#FF6E40"
        android:textColor="#EEFF41"
        android:textSize="30sp"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/add"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/div"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="Div"
        android:backgroundTint="#EEFF41"
        android:textColor="#4086FF"
        android:textSize="30sp"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/sub"
        app:layout_constraintLeft_toRightOf="@id/mul"/>


</androidx.constraintlayout.widget.ConstraintLayout>